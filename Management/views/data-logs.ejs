<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
<link href="https://cdn.datatables.net/responsive/2.2.5/css/responsive.bootstrap4.min.css">

<h1 class="mt-4">Order Logs</h1>
<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
  <thead>
      <tr>
          <th>OrderID</th>
          <th>Date</th>
          <th>Email</th>
          <th>Amount</th>
          <th>Accounts</th>
      </tr>
  </thead>
  <tbody>
    <% data.forEach(function(item) { %>
      <tr>
          <td><img src="https://image.flaticon.com/icons/svg/864/864378.svg" style="width: 18px; float: left;"></img><text style="float: right;"><%= item.OrderID %></text></td>
          <td><%= item.Date %></td>
          <td><%= item.Email %></td>
          <td><%= item.Amount %></td>
          <td><button class="btn btn-dark" style="font-size: 10px; padding: 3px;" data-toggle="modal" data-target="#exampleModal" data-items="<%= JSON.stringify(item.Accounts) %>" onclick="drawModalData(this)">View</button></td>
      </tr>
    <% }) %>
  </tbody>
</table>


<div id="accountModal" class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="accountModal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<script>
    $(document).ready(function() {
        $('#example').DataTable({
            lengthChange: false
        });
    });

    function drawModalData(item) {
        var data = JSON.parse(item.dataset.items)
        $('#accountModal').modal('show');
        var modal = document.getElementById("accountModal-body")
        modal.innerHTML = ""
        data.forEach(function(account) {
            console.log(account)
            var accountRow = document.createElement("DIV")
            var html = `
            <text style="float: left;">Product Name:</text>
            <text style="float: right;">${account.Title}</text>
            <br>
            <text style="float: left;">Account ID:</text>
            <text style="float: right;">${account.AccountID}</text>
            <hr style="margin-top: 40px;">
            `
            accountRow.innerHTML = html
            modal.append(accountRow)
        })
    }

</script>