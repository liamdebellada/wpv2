<div class="wpm-login-2fa-container">
  <a href="/logout" style="position: absolute; right: 0; margin: 1rem; color: #f07070">Cancel</a>
  <div class="wpm-login-2fa">
    <div class="wpm-login-subtitle">
      <span>To continue please enter your 2fa code</span>
    </div>
    <form action="/2faCheck" method="POST">
      <div class="wpm-login-field">
        <input inputmode="numeric" pattern="[0-9]" type="number" name="token" id="token" class="wpm-login-field-input" autofocus required>
            <label class="wpm-login-field-placeholder" for="token">Enter 2FA Code</label>
            <span class="wpm-login-field-underline"></span>
      </div>
      <button class="wpm-login-field-button">Enter Code</button>
  </div>
</div>

<script>
  document.getElementById("token").focus();
</script>

<style>

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}

