.wpm-login-2fa {
    background-color: transparent;
    padding: 100px 40px 30px 40px;
  }

  form {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .wpm-login-2fa {
      background-color: #191a1c;
    }

    .wpm-login-2fa-container {
    width: 384px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  }

  .wpm-login-subtitle {
    font-size: 14px;
    color: #9c9c9c;
    margin-bottom: 2rem;
  }

  .wpm-login-field {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .wpm-login-field-placeholder {
    position: absolute;
    top: 0;
    padding: 7px 0 0 13px;
    transition: all 200ms;
    opacity: 0.5;
    color: white;
    cursor: text
  }

  .wpm-login-field-input:focus+.wpm-login-field-placeholder,
  .wpm-login-field-input:valid+.wpm-login-field-placeholder {
    font-size: 75%;
    transform: translate3d(0, -100%, 0);
    opacity: 1;
    color: #dddddd;
  }

  .wpm-login-field-underline {
    transition: all 0.5s;
    display: inline-block;
    bottom: 0;
    left: -100%;
    height: 2px;
    background-color: #a1b0b3;
    width: 0%;
    margin: 0 0.75rem;
    opacity: 0;
  }

  .wpm-login-field-input:focus~.wpm-login-field-underline,
  .wpm-login-field-input:valid~.wpm-login-field-underline {
    width: 93%;
    opacity: 1;
  }


  .wpm-login-field-input {
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    background-color: transparent;
    color: white;
  }


  .wpm-login-field-button {
    border: none;
    width: 140px;
    padding: 5px 10px;
    border-radius: 50px;
    transition: background-color 0.5s ease-in-out;
    background-color: white;
    max-height: 32px;
    margin: 1rem auto;
    box-shadow: 9px 9px 9px -12px rgba(0, 0, 0, 0.35);
  }


  .wpm-login-field-button:hover,
  .wpm-login-field-button:focus {
    outline: none;
    background-color: #603BE9;
    color: white;
  }

  #wpm-login-field-error {
    color: #ff6347;
    opacity: 0;
    cursor: default;
    transition: opacity 200ms;
  }

  @-webkit-keyframes autofill {
    to {
      color: white;
      background: transparent;
    }
  }

  input:-webkit-autofill {
    -webkit-animation-name: autofill;
    -webkit-animation-fill-mode: both;
  }

</style>