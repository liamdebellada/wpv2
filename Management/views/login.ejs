<%- include('partials/messages'); %>


  <div class="wpm-login-container">

    <div class="wpm-login-menu">
      <div class="wpm-login-title">
        <span>Welcome to WorldPlugs Management</span>
      </div>
      <div class="wpm-login-subtitle">
        <span>Please login to your account</span>
      </div>
      <form action="/login" method="post" onsubmit="return validateRecaptcha();">
        <div class="wpm-login-field-container">
          <div class="wpm-login-field">
            <input type="text" id="email" name="email" class="wpm-login-field-input" required autofocus>
            <label class="wpm-login-field-placeholder" onselectstart="return false" for="email">Email</label>
            <span class="wpm-login-field-underline"></span>
          </div>
          <div class="wpm-login-field">
            <input type="password" id="password" name="password" class="wpm-login-field-input" required>
            <label class="wpm-login-field-placeholder" onselectstart="return false" for="password">Password</label>
            <span class="wpm-login-field-underline"></span>
          </div>
          <div style="text-align: center; height: 78px;">
            <div class="g-recaptcha" style="display:inline-block;" data-theme="dark" data-callback="checkComplete" data-sitekey="6LdqTLQZAAAAAMiaotVGuMyPr-FUhKNP6u_ARIr_"></div>
          </div>
          <button class="wpm-login-field-button">Login</button>
        </div>
        <text id="wpm-login-field-error">Please complete the captcha before continuing.</text>
        
    </form>
    </div>

</div>



<style>
  .wpm-login-menu {
    background-color: transparent;
    padding: 100px 40px 0px 40px;
  }

  

  @media (min-width: 768px) {
    .wpm-login-menu {
      background-color: #191a1c;
    }

  }

  .wpm-login-title {
    font-size: 16px;
    color: #7c7c7c;
  }

  .wpm-login-subtitle {
    font-size: 14px;
    color: #9c9c9c;
    margin-bottom: 2rem;
  }


  .wpm-login-container {
    width: 384px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }


  .wpm-login-field {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .wpm-login-field-placeholder {
    position: absolute;
    top: 0;
    padding: 7px 0 0 13px;
    transition: all 200ms;
    opacity: 0.5;
    color: white;
    cursor: text
  }

  .wpm-login-field-input:focus+.wpm-login-field-placeholder,
  .wpm-login-field-input:valid+.wpm-login-field-placeholder {
    font-size: 75%;
    transform: translate3d(0, -100%, 0);
    opacity: 1;
    color: #dddddd;
  }

  .wpm-login-field-underline {
    transition: all 0.5s;
    display: inline-block;
    bottom: 0;
    left: -100%;
    height: 2px;
    background-color: #a1b0b3;
    width: 0%;
    margin: 0 0.75rem;
    opacity: 0;
  }

  .wpm-login-field-input:focus~.wpm-login-field-underline,
  .wpm-login-field-input:valid~.wpm-login-field-underline {
    width: 93%;
    opacity: 1;
  }


  .wpm-login-field-input {
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    background-color: transparent;
    color: white;
  }


  .wpm-login-field-button {
    border: none;
    width: 140px;
    padding: 5px 10px;
    border-radius: 50px;
    transition: all 0.5s ease-in-out;
    background-color: white;
    max-height: 32px;
    margin-top: 1.5rem;
    margin-bottom: 0.3rem;
    box-shadow: 9px 9px 9px -12px rgba(0, 0, 0, 0.35);
  }


  .wpm-login-field-button:hover,
  .wpm-login-field-button:focus {
    outline: none;
    background-color: #603BE9;
    color: white;
  }

  #wpm-login-field-error {
    color: #ff6347;
    opacity: 0;
    cursor: default;
    transition: opacity 200ms;
  }

  @-webkit-keyframes autofill {
    to {
      color: white;
      background: transparent;
    }
  }

  input:-webkit-autofill {
    -webkit-animation-name: autofill;
    -webkit-animation-fill-mode: both;
  }
</style>





<script>
function validateRecaptcha() {
    var response = grecaptcha.getResponse();
    if (response.length === 0) {
        $('#wpm-login-field-error').animate({opacity: 1}, 200);
        return false;
    } else {
        return true;
    }
}
</script>