<!-- FIXED NAVBAR -->
<div class="fixed-navbar" id="fixed-navbar-row">
    <div class="fixed-navbar-content">
        <ul class="center-navbar-items" style="white-space: nowrap; padding: 0;">
            <a href="/">
                <li class="fixed-navbar-content-items" id="fixed-navbar-content-items-toggle" style="display: inline; line-height: 30px;">Home</li>
            </a>
            <a href="/">
                <li class="fixed-navbar-content-items" style="display: inline;" href="/">Store</li>
            </a>
            <a href="/cart">
                <li class="fixed-navbar-content-items" style="display: inline;" href="#home">Basket</li>
            </a>
        </ul>
        <div class="fixed-navbar-content-right" style="margin: 15px;">
            <div class="fixed-navbar-content-icons-container">
                <img class="fixed-navbar-content-icons-search" id="fixed-navbar-content-icons-search-toggle" src="/searchbar.svg" style="width:23px; display: none; " alt="Search">
                <a data-toggle="modal" data-target="#shopping-basket-toggle">
                    <img class="fixed-navbar-content-icons-basket mobile-content-margin" id="fixed-navbar-content-icons-basket-toggle" src="/basket.svg" alt="Basket">
                    <span id="fixed-navbar-content-icons-quantity-toggle" style="display: none;" class="basket-items-quantity"></span>
                </a>
            </div>
        </div>
    </div>
</div>


<!-- RIGHT SIDE SHOPPING BASKET -->
<div class="modal right fade" id="shopping-basket-toggle" tabindex="-1" role="dialog" aria-labelledby="shopping-basket-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="shopping-basket-label">Your Basket</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white;"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- BASKET ITEMS -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn view-basket" data-dismiss="modal"
                    onclick="window.location.href='/cart'">View Basket</button>
                    <button type="button" class="btn checkoutBtn" onclick="executePayment()" data-dismiss="modal">Express Checkout</button>
            </div>
        </div>
    </div>
</div>


<div>
    <div class="alert alert-warning alert-dismissible fade show" role="alert" style="display: none;" id="alertMsg">
        Item is already in your basket.
        <button type="button" class="close" onclick="document.getElementById('alertMsg').style.display = 'none'">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

