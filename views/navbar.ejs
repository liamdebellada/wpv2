<!-- COLLAPSE TOP NAVBAR -->
<link rel="stylesheet" href="/navbar.css">
<nav class="navbar navbar-expand-sm navbar-dark fixed-top" id="navbar" style="background-color: #2f3758;">
    <span class="navbar-text">&nbsp;</span>
    <ul class="navbar-nav center-navbar-items">
        <li class="nav-item">
            <div class="collapse-navbar-items">
                <a href="/"> <img src="/wplogo.svg" style="width:80px;" alt="logo"></a>
                <text class="title" style="font-weight: 500;">WorldPlugs</text>
            </div>
        </li>
    </ul>
    <div class="collapse-navbar-icons" id="navbar8">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item" data-toggle="modal" data-target="#shopping-basket-toggle">
                <img src="/searchbar.svg" style="width: 23px;"alt="Search">
            </li>
            <li class="nav-item" data-toggle="modal" data-target="#shopping-basket-toggle">
                <div class="collapse-shopping-basket-container">
                    <img class="mobile-content-margin" src="/basket.svg" style="margin-left: 15px; width: 25px;" alt="Basket">
                    <span class="basket-items-quantity"></span>
                </div>
            </li>
        </ul>
