<%- include('banner.ejs', {banner: banner}) %>

<title>WorldPlugs | <%= title  %> Products </title>
<meta name="description" content="Browse our selection of <%= title  %> products here!"/>



<div class="wp-products-span justify-content-center container-fluid">
 
  <div class="wp-products-contentbox">
    <h3 class="wp-products-contentbox-header"><%= title  %> Products</h3>
    <div class="container">
      <div class="row justify-content-center">
      <% results.forEach(function(result) { %>
        <% if (result.productState == "enabled") { %>
        <div class="wp-products-contentbox-product-container col-sm-12 col-md-6 col-lg-4">
        <div class="wp-products-contentbox-product">
          <div class="wp-products-contentbox-product-header">
            <img class="img-fluid wp-products-contentbox-product-img" src="<%= result.Image %>"></img>
            <br>
            <text style="color: white; font-size: 2em;"><%= result.Title %></text>
            <hr style="background-color: white; width: 75%">
          </div>
          <div class="wp-products-contentbox-product-body">
            <text class="wp-products-contentbox-product-description"><%= result.Description %></text>
          </div>
          <a style="width: 45%; align-self:center; margin-bottom: 20px;" class="btn wp-button wp-button-gradient wp-button-default-hover" href="/products/<%=result.CategoryKey%>/items/<%= result.ProductKey %>">View Items</a>
          
        </div>
    </div>
  <% } %>
      <% }); %>
    </div>
    </div>
  </div>

</div>



<style>
  .wp-products-span {
    margin-top: 2rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
  }

  .wp-products-contentbox {
    max-width: 1500px;
    height: auto;
    background-color: #1e1c29;
    display: flex;
    flex-direction: column;
    z-index: 0;
    padding: 20px;
    border-radius: 5px;
  }

  .wp-products-contentbox-header {
    color: white;
  }

  .wp-products-contentbox-header-seperator {
    background-color: white;
    width: 65%;
    height: 0.5px;
  }

  .wp-products-contentbox-product-container {
    padding-left: 10px; 
    padding-right: 10px; 
    min-width: 360px;
  }

  .wp-products-contentbox-product {
    position: relative;
    margin: 20px;
    background-color: #22202d;
    border-radius: 0;
    box-shadow: 4px 4px 17px -5px rgba(0, 0, 0, 0.75);
    text-align: center
  }

  .wp-products-contentbox-product:before {
    content: '';
    background: transparent;
    border: 10px solid;
    border-image-slice: 1;
    border-width: 1px;
    border-image-source: linear-gradient(to top, #12c2e9, #c471ed, #f64f59);
    top: 7px;
    right: -5px;
    bottom: -8px;
    left: -5px;
    position: absolute;
    z-index: -1;
  }

  .wp-products-contentbox-product:after {
    content: '';
    background: transparent;
    border: 10px solid;
    border-image-slice: 1;
    border-width: 1px;
    border-image-source: linear-gradient(to top, #12c2e9, #c471ed, #f64f59);
    top: 19px;
    right: -17px;
    bottom: -17px;
    left: -17px;
    position: absolute;
    z-index: -2;
  }

  .wp-products-contentbox-product-header-seperator {
    width: 60%;
    background-color: white;
    height: 0.5px;
  }

  .wp-products-contentbox-product-header {
    padding: 0.75rem 1.25rem;
  }

  .wp-products-contentbox-product-body {
    padding: 0rem 1.25rem 1.25rem;
    overflow:hidden;
    height: 64px; 
  }

  .wp-products-contentbox-product-img {
    height: 200px;
    width: 200px;
    margin-bottom: 1rem
    /* padding: 5% 20% 7% 20%; */
  }

  .wp-products-contentbox-product-description{
    color: white;
    width: 40px;
  }

  .wp-products-contentbox-product-button  {
    margin-top: auto;
    margin: auto 20% 5% 20%
  }

</style>