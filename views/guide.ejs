
<title>WorldPlugs | <%= guide.Title %></title>



<meta name="description" content="<%= guide.Title %>"/>

<div style="margin: 0 auto; max-width: 1024px">
    <div style="margin: 2rem 0 1.025rem 1.125rem; display: flex; align-items: center;"><img src="https://worldplugs.net/wp-shield.svg" style="height: 30px; margin-right: 5px"><text style="color: white; text-align: left; font-size: 1.40625rem;">WorldPlugs Support & Guides</text></div>
    <div class="wp-guide-content-box-span">
        <div class="wp-guide-content-box" style="text-align: left; padding: 1.025rem 1.825rem; overflow:hidden">
            <div class="wp-guide-content-box-title">
                <img src="https://cdn.worldplugs.net/guide-book.svg" class="image-fluid" style="height: 30px; padding-right: 0.825rem"><text class="wp-guide-content-box-title-text" style="color: white; font-size: 0.9375rem;"><%= guide.Title %></text>
            </div>
            <div class="wp-guide-content-box-body">

                <%- guide.Content %>
            </div>
            <div class="wp-guide-content-box-footer-link">
                <a href="https://worldplugs.net/<%= guide.ProductLink %>"><text class="wp-guide-content-box-title-text" style="color: white; font-size: 0.8375rem; margin-right: 0.5rem;">Head to our <%= guide.ProductUrlTitle %> page to purchase accounts!</text><img class="wp-guide-content-box-footer-image" src="https://cdn.worldplugs.net/guide-url-link.svg" class="image-fluid" style="height: 25px;"></a>
            </div>
        </div>
    </div>
</div>




<style>
.wp-guide-content-box-span {

      height: auto;
      margin: 1.125rem;
      margin-bottom: 2rem;
      background-color: #1e1c29;
      box-shadow: 4px 4px 17px -5px rgba(0, 0, 0, 0.75);
      border-radius: 5px;
    }

    .wp-guide-content-box-title {
        padding: 1rem;
        background-color: #0d0c11;
        border-radius: 5px;
        display: inline-block;
    }

    .wp-guide-content-box-body {
        background-color: #0d0c11;
        color: white;
        margin: 1.025rem;
        margin-bottom: 0;
        padding: 1rem;
        border-radius: 5px 5px 0px 5px
    }

    .wp-guide-content-box-footer-link {
        padding: 0.825rem;
        background-color: #0d0c11;
        float: right;
        margin: 1.025rem;
        margin-top: 0px;
        border-radius: 0px 0px 5px 5px;

    }



    @media (max-width: 768px) { 
        .wp-guide-content-box-title {
            display: block;
            margin: 0 auto;
        }

        .wp-guide-content-box-footer-link {
            float: none;
            display: block;
            margin: 0 auto;
            margin-top: 1.025rem;
            border-radius: 5px;
            text-align: center;
        }
        .wp-guide-content-box-body {
            border-radius: 5px;
        }

        
    }

    @media (max-width: 576px) { 
        .wp-guide-content-box-body {
            margin: 1.025rem 0;
            border-radius: 5px;
        }
     }


</style>
