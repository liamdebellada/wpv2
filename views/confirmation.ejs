<div class="content-box-span confirmation-box-span">
    <div class="content-box confirmation-box" style="text-align: center;">
      <% items.forEach(function(result) { %>
        <div style="margin: 10px;">
            <div class="resultDivider" style="border: none; color: white; margin: auto;">
                <h1 class="cardText accountText" style="font-size: 2em;"><%= result[0].Title %></h1>
                <p class="cardText accountText">Quantity: <%=result[1]%></p>
            </div>
        </div>
        <hr class="horizontalSep"/>
      <%})%>
      <text style="font-size: 8px; color: white;">By clicking confirm you accept our <a href="https://worldplugs.net/payment-policy">payment policy</a>and <a href="https://worldplugs.net/terms">Terms of service</a></text>
      <div style="padding-top: 10px;">
        <button class="btn wp-button wp-button-gradient wp-button-checkout" id="confirmation-button" onclick="confirmPayment()">Confirm</button>
      </div>
  
    </div>

    <div class="circle-loader">
      <div class="checkmark draw"></div>
    </div>


</div>


<style>

@media(min-width:992px) {
    .confirmation-box-span {
        max-width: 80% !important
    }
}



.circle-loader {
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-left-color: #d53a9d;
  animation: loader-spin 0.5s infinite linear;
  position: relative;
  display: none;
  vertical-align: top;
  border-radius: 50%;
  width: 3em;
  height: 3em;
}

.load-complete {
  -webkit-animation: none;
  animation: none;
  border-color: #d53a9d;
  transition: border 500ms ease-out;
}

.checkmark {
  display: none;
}
.checkmark.draw:after {
  animation-duration: 800ms;
  animation-timing-function: ease;
  animation-name: checkmark;
  transform: scaleX(-1) rotate(135deg);
}
.checkmark:after {
  opacity: 1;
  height: 1.45em;
  width: 0.875em;
  transform-origin: left top;
  border-right: 3px solid #d53a9d;
  border-top: 3px solid #d53a9d;
  content: "";
  left: 0.65em;
  top: 1.5em;
  position: absolute;
}

@keyframes loader-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@keyframes checkmark {
  0% {
    height: 0;
    width: 0;
    opacity: 1;
  }
  20% {
    height: 0;
    width: 0.875em;
    opacity: 1;
  }
  40% {
    height: 1.45em;
    width: 0.875em;
    opacity: 1;
  }
  100% {
    height: 1.45em;
    width: 0.875em;
    opacity: 1;
  }
}

    
    
</style>