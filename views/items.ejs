<%- include('banner.ejs', {banner: banner}) %>

<script src="/addCart.js"></script>

<div style="margin: 0 auto; width: 20rem; position: relative; z-index: 99999;" class="collapse" id="alertMsg">
  <div class="info-msg" id="fixed-alert" style="top: 0; width: 20rem;">
      <i class="fa fa-info-circle" id="alert-content"></i>
  </div>
</div>

<div class="wp-content-box-span">
  <div class="content-box">
  <% var filtered = results.filter(function (el) { return el.productState == "enabled" })%>
    <h1 id="itemHeader"><%= title %> Accounts</h1>
    <% filtered.forEach(function(result) { %>
    <div class="card product-content" style="border: none;">
      <div class="row">
        <div class="col-md-8">
          <div class="card-body" style="color: white; margin-bottom: 30px;">
            <div>
              <h1 class="wp-body-text-position-alignment" style="font-size: 2em;"><img style="width: 30px; height: 30px; margin-right: 5px;" src="<%=result.Image%>"><%= result.Title %></h1>
            </div>
            <% if (result.Stock == 0) { %>
              <p class="wp-body-text-position-alignment">Stock: <text style="color: #ea6464" class="itemStock">Out of stock</text></p>
            <% } else { %> 
              <p class="wp-body-text-position-alignment">Stock: <text style="color: #4BB543" class="itemStock"><%= result.Stock %></text></p>
            <% } %>
              <p class="wp-body-text-position-alignment">Price: <text style="color: #4BB543">Â£<%= parseFloat(result.Price).toFixed(2) %></text></p>
              <input type="number" pattern="[0-9]*" class="wp-item-quantity" value=1 min="1" max=<%= result.Stock %> id=<%= result._id%>></input>
          </div>
        </div>
        <div class="col-md-4 align-self-center">
          
          <% if (result.Stock == 0) { %>
            <button class="wp-button-add-to-cart btn wp-button wp-button-disabled" disabled>Unavailable</button>
          <% } else { %>
            <button class="wp-button-add-to-cart btn wp-button wp-button-gradient wp-button-default-hover <%= result.Stock %>" id=<%= result._id %>>Add me to cart</button>
          <% } %>
        </div>
      </div>
    </div>
    
      <% if(filtered[filtered.length -1] !== result) { %>
        <hr class="horizontalSep"/>
      <% } %>


    <%})%>

  </div>
</div>

<div id="watch1" style="height: 20px">
  <div><text id="valueAfter" style="color: white;"></text></div>
  <div><text id="valueBefore" style="color: white;"> </text></div>
</div>
